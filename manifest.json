{
  "manifest_version": 2,
  "name": "Cricboard",
  "description": "Scoreboard for Live Cricket matches",
  "version": "1.0",
  "author": "Anand Mattikopp",
  "browser_action": {
    "default_popup": "ninja-cricboard.html",
	  "default_icon": "cricboard.png",   
	  "default_title" : "Live scores at your fingertips" 
  },
  "commands": {
      "_execute_browser_action": {
        "suggested_key": {
          "default": "Alt+Shift+C",
          "mac": "Alt+Shift+C"
        },
        "description": "Opens ninja-cricboard.html"
      }
  },
  "permissions": ["activeTab"]
}
